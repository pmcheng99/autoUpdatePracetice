            contentType: false,
            processData: false,
            success: function (res) {
                // let strRes = String(res);
                // console.log(strRes);
                // if(strRes == "end"){
                //  //TODO 待所有行為操作完呼叫 停止
                //     console.log(timeoutID + " clear" );
