<script>
    var timeoutID;
    //document ready
    $(function () {
        //畫面被關掉 觸發暫停下載
        $(window).on("unload", function () {
            pauseUpload();
        });
    });

    function getProgress(){
        //uploadProgress
    }

    function doUpload() {
        console.log('start upload');
        let url = "http://localhost:3000/docUpload/step4/upload";
        $.ajax({
            type: "POST",
            url: url,
            contentType: false,
            processData: false,
            success: function (res) {
                console.log(res);
                //點選上傳後 開始check狀態
                //timeoutID = window.setInterval((() => checkStatus()), 1000);
            },
            error: function (res) {
                console.log(res);
            }
        });

        //像server 取得進度
        var current_progress = 0;
        var interval = setInterval(function () {
            $.ajax({
            type: "POST",
            url: "http://localhost:3000/docUpload/step4/uploadProgress",
            dataType: 'json',
            success: function (res) {
                console.log("progress " + res.progress);
                let progressNum = Number(res.progress);
                current_progress += progressNum;
                if(current_progress > 100){
                    current_progress = 100;
                }
            },
            error: function (res) {
                console.log("POST uploadProgress error:" + res);
                clearInterval(interval);
            }
        });
            $("#dynamic")
                .css("width", current_progress + "%")
                .attr("aria-valuenow", current_progress)
                .text(current_progress + "%");
            if (current_progress >= 100){
                clearInterval(interval);
                console.log("上傳完成");
                $('#sel2_status').html("<option>上傳完成</option>");
            }
        }, 1000);
    }

    function pauseUpload() {
        console.log('close window, pause upload');
        let url = "http://localhost:3000/docUpload/step4/pause";
        $.ajax({
            type: "POST",
            url: url,
            contentType: false,
            processData: false,
            success: function (res) {
                console.log(res);
                //點選上傳後 開始check狀態
                //timeoutID = window.setInterval((() => checkStatus()), 1000);
            },
            error: function (res) {
                console.log(res);
            }
        });
    }
    function resumeUpload() {
        console.log('close window, pause upload');
        let url = "http://localhost:3000/docUpload/step4/resume";
        $.ajax({
            type: "POST",
            url: url,
            contentType: false,
            processData: false,
            success: function (res) {
                console.log(res);
                //點選上傳後 開始check狀態
                //timeoutID = window.setInterval((() => checkStatus()), 1000);
            },
            error: function (res) {
                console.log(res);
            }
        });
    }

    function checkStatus() {
        let url = "http://localhost:3000/status/touch";
        $.ajax({
            type: "POST",
